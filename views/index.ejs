<%- include('partials/header', { title: 'Clothes' }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 m-0">Clothes</h1>
  <% if (currentUser && currentUser.rule === 'admin') { %>
    <a href="/products/new" class="btn btn-danger">Add product</a>
  <% } %>
 </div>
<div class="row g-3">
  <% products.forEach(p => { %>
    <div class="col-12 col-sm-6 col-lg-4">
      <div class="card h-100 shadow-sm">
        <img src="<%= p.pic %>" class="card-img-top object-fit-cover" style="height: 180px" alt="pic" />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= p.name %></h5>
          <p class="card-category"><%= p.category %></p>
          <p class="card-text flex-grow-1"><%= p.desc %></p>
          <div class="d-flex justify-content-between align-items-center">
            <span class="fw-bold">$<%= Number(p.price).toFixed(2) %></span>
            <% if (currentUser && currentUser.rule === 'admin') { %>
              <div class="btn-group gap-2">
                <a class="btn btn-primary rounded-start" href="/products/<%= p.id %>/edit">Edit</a>
                <button 
                  class="btn btn-danger rounded-end" 
                  onclick="if(!confirm('Delete product?')) return false; document.getElementById('delete-<%= p.id %>').submit();">
                  Delete
                </button>
              </div>

              <form id="delete-<%= p.id %>" action="/products/<%= p.id %>/delete" method="post" style="display:none;"></form>

            <% } %>
          </div>
        </div>
      </div>
    </div>
  <% }) %>
 </div>
<%- include('partials/footer') %>
